---
# Yamllint configuration
# Compatible with ansible-lint requirements
extends: default

rules:
  line-length:
    max: 180
    level: warning
  truthy:
    level: warning
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  collections/
  .github/workflows/vps-setup.yml
