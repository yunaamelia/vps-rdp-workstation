// Managed by Ansible - WhiteSur Firefox Theme (Balanced Beauty)
// Prefs sourced from vinceliuice/WhiteSur-firefox-theme install.sh

// Enable custom CSS stylesheets (required for WhiteSur theme)
user_pref("toolkit.legacyUserProfileCustomizations.stylesheets", true);

// Titlebar integration
user_pref("browser.tabs.drawInTitlebar", true);

// UI Density (Normal = 0)
user_pref("browser.uidensity", 0);

// Hardware acceleration
user_pref("layers.acceleration.force-enabled", true);

// ARGB visuals for transparency
user_pref("mozilla.widget.use-argb-visuals", true);

// GTK rounded corners integration
user_pref("widget.gtk.rounded-bottom-corners.enabled", true);

// SVG context properties for icon theming
user_pref("svg.context-properties.content.enabled", true);
