# Generated by Ansible
# Kitty Configuration - {{ vps_terminal_kitty_theme | default('Nordic') }}

# Fonts
font_family      {{ vps_terminal_font | default(default_monospace_font) | default('JetBrainsMono Nerd Font') }}
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        {{ vps_default_font_size | default(11) }}

# Window Layout
window_padding_width 4
hide_window_decorations no
confirm_os_window_close 0

# Bell
enable_audio_bell no

# Nordic Theme
# https://github.com/arcticicestudio/nord-hyper
foreground              #D8DEE9
background              #2E3440
selection_foreground    #D8DEE9
selection_background    #4C566A

# Cursor colors
cursor                  #D8DEE9
cursor_text_color       #2E3440

# URL underline color when hovering with mouse
url_color               #88C0D0

# Kitty window border colors
active_border_color     #88C0D0
inactive_border_color   #4C566A
bell_border_color       #EBCB8B

# OS Window titlebar colors
wayland_titlebar_color  #2E3440
macos_titlebar_color    #2E3440

# Tab bar colors
active_tab_foreground   #2E3440
active_tab_background   #88C0D0
inactive_tab_foreground #D8DEE9
inactive_tab_background #2E3440
tab_bar_background      #2E3440

# Colors for marks (marked text in the terminal)
mark1_foreground #2E3440
mark1_background #88C0D0
mark2_foreground #2E3440
mark2_background #EBCB8B
mark3_foreground #2E3440
mark3_background #B48EAD

# The 16 terminal colors

# black
color0 #3B4252
color8 #4C566A

# red
color1 #BF616A
color9 #BF616A

# green
color2  #A3BE8C
color10 #A3BE8C

# yellow
color3  #EBCB8B
color11 #EBCB8B

