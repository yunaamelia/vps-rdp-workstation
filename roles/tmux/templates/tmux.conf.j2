# Status Bar
set -g status-position top
set -g status-justify left
set -g status-style "bg=$BASE,fg=$TEXT"
set -g status-left ""
set -g status-right "#[fg=$BLUE,bg=$BASE]#[fg=$BASE,bg=$BLUE]  #H #[fg=$BLUE,bg=$SURFACE0] #[fg=$TEXT,bg=$SURFACE0] %Y-%m-%d %H:%M #[fg=$SURFACE0,bg=$BASE]"
set -g status-right-length 100
set -g status-left-length 100

# Window format
setw -g window-status-format "#[fg=$SURFACE2,bg=$BASE]#[fg=$TEXT,bg=$SURFACE2] #I  #W #[fg=$SURFACE2,bg=$BASE]"
setw -g window-status-current-format "#[fg=$MAUVE,bg=$BASE]#[fg=$BASE,bg=$MAUVE] #I  #W #[fg=$MAUVE,bg=$BASE]"
setw -g window-status-separator " "

# Pane borders
set -g pane-border-style "fg=$SURFACE0"
set -g pane-active-border-style "fg=$MAUVE"

# Message style
set -g message-style "bg=$MAUVE,fg=$BASE"
# BEGIN VPS WORKSTATION ENHANCEMENTS
# === Tmux Plugin Manager ===
set -g @plugin 'tmux-plugins/tpm'

# Session Persistence
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'

# Clipboard Integration (RDP compatible)
set -g @plugin 'tmux-plugins/tmux-yank'

# FZF Integration
set -g @plugin 'sainnhe/tmux-fzf'

# Catppuccin Theme
set -g @plugin 'catppuccin/tmux'

# === Plugin Configuration ===

# Resurrect
set -g @resurrect-save 'C-s'
set -g @resurrect-restore 'C-r'
set -g @resurrect-capture-pane-contents 'on'
set -g @resurrect-strategy-vim 'session'
set -g @resurrect-strategy-nvim 'session'

# Continuum (auto-save)
set -g @continuum-restore 'on'
set -g @continuum-save-interval '15'

# Yank (clipboard)
set -g @yank_selection 'clipboard'
set -g @yank_selection_mouse 'clipboard'
set -g @yank_action 'copy-pipe'

# FZF
set -g @tmux-fzf-launch-key 'F'
TMUX_FZF_OPTIONS="-p -w 80% -h 70% -m"

# === Catppuccin Theme Configuration ===
set -g @catppuccin_flavour 'mocha'
set -g @catppuccin_window_left_separator ""
set -g @catppuccin_window_right_separator " "
set -g @catppuccin_window_middle_separator " █"
set -g @catppuccin_window_number_position "right"
set -g @catppuccin_window_default_fill "number"
set -g @catppuccin_window_default_text "#W"
set -g @catppuccin_window_current_fill "number"
set -g @catppuccin_window_current_text "#W"
set -g @catppuccin_status_modules_right "directory user host session"
set -g @catppuccin_status_left_separator  " "
set -g @catppuccin_status_right_separator ""
set -g @catppuccin_status_fill "icon"
set -g @catppuccin_status_connect_separator "no"
set -g @catppuccin_directory_text "#{pane_current_path}"

# === General Settings ===
set -g mouse on
set -g base-index 1
setw -g pane-base-index 1
set -g renumber-windows on
set -g history-limit 50000
set -g display-time 4000
set -g status-interval 5
set -g default-terminal "screen-256color"
set -ga terminal-overrides ",*256col*:Tc"

# Initialize TPM (keep this at the very bottom)
run '~/.tmux/plugins/tpm/tpm'
# END VPS WORKSTATION ENHANCEMENTS
